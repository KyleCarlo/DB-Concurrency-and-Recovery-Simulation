    <div class="return">
        <a href="/">
            <svg width="30px" height="30px" viewBox="-112.64 -112.64 1249.28 1249.28" xmlns="http://www.w3.org/2000/svg" fill="white">
                <path d="M222.927 580.115l301.354 328.512c24.354 28.708 20.825 71.724-7.883 96.078s-71.724 20.825-96.078-7.883L19.576 559.963a67.846 67.846 0 01-13.784-20.022 68.03 68.03 0 01-5.977-29.488l.001-.063a68.343 68.343 0 017.265-29.134 68.28 68.28 0 011.384-2.6 67.59 67.59 0 0110.102-13.687L429.966 21.113c25.592-27.611 68.721-29.247 96.331-3.656s29.247 68.721 3.656 96.331L224.088 443.784h730.46c37.647 0 68.166 30.519 68.166 68.166s-30.519 68.166-68.166 68.166H222.927z"/>
            </svg>
        </a>
    </div>
    <h1 class="title">Edit Appointment</h1>
    <form action="/update" method = "post" name = "appointmentEditForm">
        <!-- APPT ID -->
        <div class="apptid">
            <label for="apptid"><h1 class="subtitle">Appointment ID to Update: </h1></label>
            <input class="inputString" name="apptid" type="text">
        </div>
        <h1 class="subtitle a">Updated Appointment Information</h1>
        <!-- TYPE -->
        <div class="type">
            <p class="label">Appointment Type</p>
            <div class="radio">
                <input type="radio" id="consultation" name="type" value="Consultation">
                <label for="consultation">Consultation</label>
            </div>
            <div class="radio">
                <input type="radio" id="inpatient" name="type" value="Inpatient">
                <label for="inpatient">Inpatient</label>
            </div>
        </div>
        <!-- VIRTUAL -->
        <div class="Virtual">
            <p class="label">Mode of Appointment</p>
            <div class="radio">
                <input type="radio" id="virtual" name="Virtual" value="1">
                <label for="consultation">Virtual</label>
            </div>
            <div class="radio">
                <input type="radio" id="f2f" name="Virtual" value="0">
                <label for="f2f">Face-to-Face</label>
            </div>
        </div>
        <!-- STATUS -->
        <div class="status">
            <label class="label" for="status">Appointment Status</label>
            <select class="inputString" name="status">
                <option value="Queued">Queued</option>
                <option value="Serving">Serving</option>
                <option value="NoShow">NoShow</option>
                <option value="Complete">Complete</option>
                <option value="Cancel">Cancel</option>
                <option value="Skip">Skip</option>
            </select>
        </div>
        <!-- START TIME -->
        <div class="StartTime">
            <label class="label" for="StartTime">Appointment Start Time</label>
            <input class="inputString" name="StartTime" type="datetime-local">
        </div>
        <!-- END TIME -->
        <div class="EndTime">
            <label class="label" for="EndTime">Appointment End Time</label>
            <input class="inputString" name="EndTime" type="datetime-local">
        </div>
        <!-- MAIN SPECIALTY -->
        <div class="mainspecialty">
            <label class="label" for="mainspecialty">Doctor's Specialty</label>
            <select class="inputString" name="mainspecialty">
                <!-- INSERT SPECIALTIES -->
            </select>
        </div>

        <h1 class="subtitle h">Updated Hospital Information</h1>
        <!-- ISHOSPITAL -->
        <div class="IsHospital">
            <p class="label">Hospital or Clinic</p>
            <div class="radio">
                <input type="radio" id="hospital" name="IsHospital" value="1">
                <label for="hospital">Hospital</label>
            </div>
            <div class="radio">
                <input type="radio" id="clinic" name="IsHospital" value="0">
                <label for="clinic">Clinic</label>
            </div>
        </div>
        <!-- REGION NAME -->
        <div class="RegionName">
            <label class="label" for="RegionName">Hospital/Clinic Region</label>
            <select class="inputString" name="RegionName">
                <!-- INSERT REGIONS -->
            </select>
        </div>
        <!-- PROVINCE -->
        <div class="Province">
            <label class="label" for="Province">Hospital/Clinic Province</label>
            <select class="inputString" name="Province">
                <!-- INSERT PROVINCES -->
            </select>
        </div>
        <!-- CITY -->
        <div class="City">
            <label class="label" for="City">Hospital/Clinic City</label>
            <select class="inputString" name="City" disabled>
                <!-- INSERT CITIES -->
            </select>
        </div>
        <!-- HOSPITALNAME -->
        <div class="hospitalname">
            <label class="label" for="hospitalname">Hospital/Clinic Name</label>
            <input class="inputString" name="hospitalname" type="text">
        </div>
        <h1 class="subtitle p">Updated Patient Information</h1>
        <!-- PATIENT AGE -->
        <div class="patientage">
            <label class="label" for="patientage">Patient Age</label>
            <input class="inputString" type="number" min="0" max="100" name = "patientage">
        </div>
        <!-- PATIENT GENDER -->
        <div class="patientgender">
            <p class="label">Patient Sex</p>
            <div class="radio">
                <input type="radio" id="female" name="patientgender" value="FEMALE">
                <label for="female">Female</label>
            </div>
            <div class="radio">
                <input type="radio" id="male" name="patientgender" value="MALE">
                <label for="male">Male</label>
            </div>
        </div>
        <!-- SUBMIT BUTTON -->
        <button type="submit" name="button">Update Appointment</button>
    </form>
</body>
<script>
    const location_options = {
        "National Capital Region (NCR)":{
            "Manila":["Las Piñas", "Makati", "Malabon", "Mandaluyong", "Manila",  "Muntinlupa", "Parañaque", "Pasig", "Quezon City", "San Juan", "Taguig", "Valenzuela"]
        },
        "Ilocos Region (I)":{
            "La Union":["San Fernando City"],
            "Pangasinan":["Dagupan City", "Pozzorubio"]
        }, 
        "Central Luzon (III)":{
            "Bulacan":["Malolos City"],
            "Zambales":["Olongapo City"]
        },
        "CALABARZON (IV-A)":{
            "Cavite":["Bacoor City","Dasmariñas City"],
            "Laguna":["Calamba City", "Pangil", "Santa Cruz", "Santa Rosa City", "Siniloan"]
        }, 
        "Bicol Region (V)":{
            "Albay":["Legazpi City", "Manito"],
        }, 
        "Western Visayas (VI)":{
            "Iloilo":["Iloilo City"],
            "Negros Oriental":["Dumaguete City"]
        },
        "Central Visayas (VII)":{
            "Cebu":["Cebu City","Liloan"]
        }, 
        "Eastern Visayas (VIII)":{
            "Leyte":["Kananga"]
        },
        "Northern Mindanao (X)":{
            "Lanao del Norte":["Iligan City"],
            "Bukidnon":["Valencia"]
        }, 
        "SOCCSKSARGEN (Cotabato Region) (XII)":{
            "Cotabato":["Makilala"],
            "South Cotabato":["General Santos City"]
        }
    };
    const regions = Object.keys(location_options);
    const regionInput = document.querySelector(".RegionName .inputString");
    const provinceInput = document.querySelector(".Province .inputString");
    const cityInput = document.querySelector(".City .inputString");
    const specialtyInput = document.querySelector(".mainspecialty .inputString");
    const statusInput = document.querySelector(".status .inputString");
    for (let index = 0; index < regions.length; index++) {
        let element = document.createElement("option");
        element.innerHTML = "<options value=" + regions[index] + ">" + regions[index] + "</options>";
        console.log(element);
        regionInput.append(element);
    }
    regionInput.addEventListener("change", function(){
        let selectedRegion = regionInput.value;
        let provinces = Object.keys(location_options[selectedRegion]);
        provinceInput.innerHTML = "";
        for (let index = 0; index < provinces.length; index++) {
            let element = document.createElement("option");
            element.innerHTML = "<options value=" + provinces[index] + ">" + provinces[index] + "</options>";
            provinceInput.append(element);
        }
        provinceInput.disabled = false;
        provinceInput.selectedIndex = -1;
        cityInput.disabled = true;
        cityInput.innerHTML = "";
        cityInput.value = "";
    });
    provinceInput.addEventListener("change", function(){
        cityInput.disabled = false;
        let selectedRegion = regionInput.value;
        let selectedProvince = provinceInput.value;
        let cities = location_options[selectedRegion][selectedProvince];
        cityInput.innerHTML = "";
        for (let index = 0; index < cities.length; index++) {
            let element = document.createElement("option");
            element.innerHTML = "<options value=" + cities[index] + ">" + cities[index] + "</options>";
            cityInput.append(element);
        }
        cityInput.disabled = false;
        cityInput.selectedIndex = -1;
    });
    const specialtyOptions = ["aesthetic, plastic, and reconstructive surgery", "dermatology","family and community medicine", "general medicine","general surgery", "hematology", "infectious diseases","internal medicine","lifestyle, functional, and integrative medicine","naturopathic medicine", "neurology", "obstetrics and gynecology","ophthalmology", "orthopedic surgery", "pediatrics", "pulmonology","veterinary medicine"];
    for (let index = 0; index < specialtyOptions.length; index++) {
        let element = document.createElement("option");
        element.innerHTML = "<options value=" + specialtyOptions[index] + ">" + specialtyOptions[index] + "</options>";
        specialtyInput.append(element);
    }
    const default_provinces = Object.keys(location_options["National Capital Region (NCR)"]);
    for (let index = 0; index < default_provinces.length; index++) {
        let element = document.createElement("option");
        element.innerHTML = "<options value=" + default_provinces[index] + ">" + default_provinces[index] + "</options>";
        provinceInput.append(element);
    }
    const default_cities = location_options["National Capital Region (NCR)"]["Manila"];
    for (let index = 0; index < default_cities.length; index++) {
        let element = document.createElement("option");
        element.innerHTML = "<options value=" + default_cities[index] + ">" + default_cities[index] + "</options>";
        cityInput.append(element);
    }
    cityInput.selectedIndex = -1;
    provinceInput.selectedIndex = -1;
    specialtyInput.selectedIndex = -1;
    statusInput.selectedIndex = -1;
</script>
</html>